<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="400.0" styleClass="fondoLogin" stylesheets="@../estilos/estilos.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.login.Crear">
   <children>
      <BorderPane prefHeight="500.0" prefWidth="400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Pane prefHeight="100.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                  <Label text="Crear cuenta nueva">
                     <HBox.margin>
                        <Insets top="30.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Barlow Condensed Regular" size="32.0" />
                     </font>
                  </Label>
                  <Pane prefHeight="100.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </top>
         <center>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Pane prefHeight="400.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                  <VBox prefHeight="400.0" prefWidth="209.0">
                     <children>
                        <JFXTextField fx:id="txtNombre" alignment="CENTER" prefWidth="80.0" promptText="Nombre">
                           <VBox.margin>
                              <Insets bottom="25.0" />
                           </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="txtApellido" alignment="CENTER" prefWidth="80.0" promptText="Apellido">
                           <VBox.margin>
                              <Insets bottom="25.0" />
                           </VBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="txtEmail" alignment="CENTER" prefWidth="80.0" promptText="Email">
                           <VBox.margin>
                              <Insets bottom="25.0" />
                           </VBox.margin>
                        </JFXTextField>
                        <JFXPasswordField fx:id="txtPassword" alignment="CENTER" promptText="Password" />
                     </children>
                  </VBox>
                  <Pane prefHeight="400.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </center>
         <bottom>
            <VBox prefHeight="140.0" prefWidth="400.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="92.0" prefWidth="400.0">
                     <children>
                        <Pane prefHeight="63.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                        <VBox prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <JFXButton onAction="#crear" prefWidth="300.0" styleClass="botonLogin" text="Crear cuenta" textFill="WHITE">
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </JFXButton>
                              <JFXButton onAction="#regresar" prefWidth="300.0" styleClass="botonLogin" text="Regresar" textFill="WHITE" />
                           </children>
                        </VBox>
                        <Pane prefHeight="63.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
